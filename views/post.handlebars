<section id="main" class="container 75%">
  <header>
    <h2>Post a new job</h2>
    <p>Tell us about the details below</p>
  </header>
  <div class="box">
    <form method="post" action="/post/new">
      <div class="row uniform 50%">
        <div class="12u 12u(narrower)">
          <h4 style="font-weight: bold">Job Title:</h4>
          <input type="text" name="title" required />
        </div>
      </div>
      <div class="row uniform 50%">
        <div class="6u 12u(narrower)">
          <h4 style="font-weight: bold">Date <em>(mm/dd/yyyy)</em>:</h4>
          <input type="text" pattern="\d{1,2}/\d{1,2}/\d{4}" name="date" required />
        </div>
      </div>
      <div class="row uniform 50%">
        <div class="6u 12u(mobilep)">
          <h4 style="font-weight: bold">Start Time:</h4>
          <input type="text" name="start_time" required />
        </div>
        <div class="6u 12u(mobilep)">
          <h4 style="font-weight: bold">End Time:</h4>
          <input type="text" name="end_time" required />
        </div>
      </div>
      <div class="row uniform 50%">
        <div class="12u">
          <h4 style="font-weight: bold">Description <em>(Please describe details about the job and your children)</em>:</h4>
          <textarea style="resize: none" name="description" rows="6" required></textarea>
        </div>
      </div>
      <div class="row uniform 50%">
        <div class="6u 12u(mobilep)">
          <h4 style="font-weight: bold">Pay Rate <em>($ per hour)</em>:</h4>
          <input type="text" maxlength="2" name="pay" required />
        </div>
        <div class="6u 12u(mobilep)">
          <h4 style="font-weight: bold">Number of Children:</h4>
          <input type="text" name="children" pattern="\d{1}" maxlength="1" required />
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <ul class="actions align-center">
            <li><input type="submit" value="Post" /></li>
          </ul>
        </div>
      </div>
    </form>
  </div>
</section>