<div id="profile-wrapper">
  <div id="profile-nav">
    <div class="box">
      <ul class="alt">
        <a href="/account/profile">
          <li style="border-top: none">Profile Info</li>
        </a>
        <a href="/account/settings">
          <li>Account Settings</li>
        </a>
        <a href="/account/notifications">
          <li>Email Notifications</li>
        </a>
        <a href="/account/payment">
          <li>Payment</li>
        </a>
      </ul>
    </div>
  </div>
  <section id="main" class="container profile-main" style="padding: 3% 2% 0 0; position: relative">
    {{#if profile.image}}
    <img height="175px" src="https://s3.amazonaws.com/hs-impact/{{profile.username}}.jpg?time={{time}}" style="position: absolute; top: 3%; right: 2%; border: #646464 2px solid">{{/if}}
    <header style="margin: 0">
      <h2>{{profile.name.first}} {{profile.name.last}}</h2>
      <p>{{profile.account_type}}</p>
    </header>
    <div class="box">
      <h3>Biography</h3>
      <p>{{profile.biography}}</p>
      <h3>Qualifications</h3>
      <h3>Reviews</h3>
    </div>
  </section>
  <div style="clear: both;"></div>
</div>