<section id="main" class="container 75%">
  <header>
    <h2>Sign Up</h2>
  </header>
  <div class="box">
    <form method="post" action="/auth/signup">
      <div class="row uniform 50%">
        <div class="6u 12u(mobilep)">
          <input type="text" name="firstName" placeholder="First Name" required />
        </div>
        <div class="6u 12u(mobilep)">
          <input type="text" name="lastName" placeholder="Last Name" required />
        </div>
      </div>
      <div class="row uniform 50%">
        <div class="12u">
          <input type="email" name="email" placeholder="Email" required />
        </div>
      </div>
      <div class="row uniform 50%">
        <div class="12u">
          <input type="password" name="password" placeholder="Password" required />
        </div>
      </div>
      <div class="row uniform 50%">
        <div class="12u">
          <input type="password" name="passwordConfirm" placeholder="Confirm Password" required />
        </div>
      </div>
      <div class="row uniform 50%">
        <h4 style="font-weight: bold">Account Type</h4>
      </div>
      <div class="row uniform 50%">
        <div class="5u 12u(narrower)">
          <input type="radio" id="student" name="account_type" value="Student" checked>
          <label for="student">Student</label>
        </div>
        <div class="5u 12u(narrower)">
          <input type="radio" id="parent" name="account_type" value="Parent">
          <label for="parent">Parent</label>
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <ul class="actions align-center">
            <li><input type="submit" value="Sign Up!" /></li>
          </ul>
        </div>
      </div>
    </form>
    <div class="row uniform">
      <div class="12u">
        <ul class="actions align-center">
          <a href="/auth/facebook" style="border: none; display: inline-block; position: relative;">
            <div class="blocker" style="position:absolute; height:100%; width:100%; z-index:1;"></div>
            <iframe name="f2cd94128e9bbc8" width="1000px" height="1000px" frameborder="0" allowtransparency="true" allowfullscreen="true"
              scrolling="no" title="fb:login_button Facebook Social Plugin" src="https://www.facebook.com/v2.9/plugins/login_button.php?app_id=1981422115412589&amp;auto_logout_link=false&amp;button_type=login_with&amp;channel=http%3A%2F%2Fstaticxx.facebook.com%2Fconnect%2Fxd_arbiter%2Fr%2FXBwzv5Yrm_1.js%3Fversion%3D42%23cb%3Df3cf3aec7c3dc14%26domain%3Dlocalhost%26origin%3Dhttp%253A%252F%252Flocalhost%253A3000%252Ff2c1fca53204804%26relation%3Dparent.parent&amp;container_width=676&amp;locale=en_US&amp;max_rows=1&amp;sdk=joey&amp;show_faces=false&amp;size=large&amp;use_continue_as=true"
              style="border: none; visibility: visible; width: 236px; height: 40px; z-index: 2" class=""></iframe>
          </a>
        </ul>
      </div>
    </div>
    <div class="row uniform">
      <div class="12u">
        <p class='align-center'>
          By signing up, you agree to the
          <a href="/legal/terms/">Terms of Use </a> and
          <a href="/legal/privacy/">Privacy Policy</a>
        </p>
      </div>
    </div>
  </div>
  <div class="row uniform">
    <div class="12u">
      <p class="align-center">
        Already have an account?
        <a href="/login">Log In</a>
      </p>
    </div>
  </div>
</section>